{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": ["ES2020"],
      "esModuleInterop": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ES2020",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    },
    "include": ["src"],
    "outDir": "./dist",
    "exclude": ["*.test.ts"]
  }
  